{
    "compilerOptions": {
      "types": ["node"],
      "target": "esnext",
      "module": "nodenext",
      "outDir": "dist",
      "sourceMap": true,
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src/types/**/*.ts"
    ]
}