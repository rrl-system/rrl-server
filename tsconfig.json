{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "*": [
        "src/@types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts"
  ],
  "exclude": [
    "src/types/**/*.ts"
  ],
  // "hooks": [
  //   "copy-files"
  // ]
}